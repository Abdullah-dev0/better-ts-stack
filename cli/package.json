{
  "name": "better-ts-stack",
  "version": "1.0.0",
  "description": "A powerful CLI tool that generates fully configured TypeScript projects with backend, frontend, database integration, Docker support, and moreâ€”all through an interactive setup.",
  "main": "dist/index.js",
  "bin": {
    "better-ts-stack": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abdullah-dev0/better-ts-stack.git"
  },
  "homepage": "https://github.com/Abdullah-dev0/better-ts-stack#readme",
  "bugs": {
    "url": "https://github.com/Abdullah-dev0/better-ts-stack/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx  src/index.ts",
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs');const p='dist/index.js';fs.writeFileSync(p,'#!/usr/bin/env node\\n'+fs.readFileSync(p,'utf8'))\"",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write  \"**/*.{ts,tsx,js,jsx,json,md,mdx,css}\"",
    "format:check": "prettier --check  \"**/*.{ts,tsx,js,jsx,json,md,mdx,css}\"",
    "prepare": "cd .. && husky cli/.husky"
  },
  "keywords": [
    "cli",
    "builder",
    "backend",
    "typescript",
    "express",
    "prisma",
    "template"
  ],
  "author": "Abdullah",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "consola": "^3.2.3",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.0"
  }
}
